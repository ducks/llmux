order = 1
what = "Parse edit formats from LLM output (unified diff, old/new pairs, full file)"
file = "src/apply_and_verify/edit_parser.rs"
why = "Need to extract structured edits from various LLM response formats before applying"
how = "Define EditOperation enum (UnifiedDiff, OldNewPair, FullFile). Parse unified diff @@ hunks with regex. Parse old/new JSON pairs. Detect format automatically from content structure. Validate parsed edits have required fields."

